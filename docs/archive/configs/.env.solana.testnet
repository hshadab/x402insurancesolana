# Solana x402 Insurance Configuration
# For Solana TESTNET deployment

# Application
FLASK_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# Blockchain - Solana Testnet Configuration
BLOCKCHAIN_NETWORK=solana  # 'base' or 'solana'
SOLANA_CLUSTER=testnet  # devnet, testnet, mainnet-beta
SOLANA_RPC_URL=https://api.testnet.solana.com

# USDC Token (Testnet)
# Testnet USDC Mint: 4zMMC9srt5Ri5X14GAgXhaHii3GnPAEERYPJgZJDncDU (same as devnet)
USDC_MINT_ADDRESS=4zMMC9srt5Ri5X14GAgXhaHii3GnPAEERYPJgZJDncDU

# Backend Wallet
# IMPORTANT: Generate your own keypair and fund it with testnet SOL and USDC
# Instructions:
#   1. solana-keygen new --outfile ~/solana-testnet-wallet.json
#   2. solana airdrop 2 <YOUR_PUBKEY> --url testnet
#   3. Get testnet USDC from https://faucet.circle.com/ (select Solana Testnet)
WALLET_KEYPAIR_PATH=~/solana-testnet-wallet.json
BACKEND_WALLET_PUBKEY=YOUR_SOLANA_PUBKEY_HERE

# Database
DATABASE_TYPE=json  # 'json' or 'postgres'
DATABASE_URL=  # Leave empty for JSON file storage

# zkEngine Configuration
ZKENGINE_PATH=./zkengine/zkEngine
ZKENGINE_TIMEOUT=60  # seconds

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds

# Insurance Parameters
MAX_COVERAGE_AMOUNT=100000  # 0.1 USDC in micro-USDC (6 decimals)
PREMIUM_RATE=0.01  # 1% premium
DEFAULT_POLICY_DURATION=86400  # 24 hours in seconds

# Anchor Program (Proof Attestation)
# Deploy your Anchor program to testnet and update this
ATTESTATION_PROGRAM_ID=YOUR_PROGRAM_ID_HERE

# x402 Payment Protocol
X402_PAYMENT_TIMEOUT=300  # 5 minutes

# Production URLs (update when deploying)
BASE_URL=http://localhost:8000
DASHBOARD_URL=http://localhost:8000/dashboard
