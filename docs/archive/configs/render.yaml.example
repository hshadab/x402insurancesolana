services:
  - type: web
    name: x402insurance
    runtime: python
    buildCommand: |
      pip install -r requirements.txt
      pip install /tmp/x402/python/x402
    startCommand: gunicorn server:app --bind 0.0.0.0:$PORT
    envVars:
      - key: BACKEND_WALLET_PRIVATE_KEY
        value: YOUR_PRIVATE_KEY_HERE  # NEVER commit actual private keys!
      - key: BACKEND_WALLET_ADDRESS
        value: YOUR_WALLET_ADDRESS_HERE
      - key: BASE_RPC_URL
        value: YOUR_ALCHEMY_RPC_URL_HERE  # https://base-mainnet.g.alchemy.com/v2/YOUR_KEY
      - key: USDC_CONTRACT_ADDRESS
        value: 0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913  # Base Mainnet USDC
      - key: PORT
        value: 8000

# SECURITY WARNING:
# 1. NEVER commit actual secrets to this file
# 2. Set these as environment variables in Render dashboard instead
# 3. Keep render.yaml (with real values) in .gitignore
# 4. Only commit this .example template
